<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@mipmap/bg_login"
              tools:context=".Ui.activities.auth.NewPassActivity">
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/white"
            android:layout_marginTop="@dimen/margin_2xlarge"
    >
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_med"
                android:src="@mipmap/logoo"
        />
    </LinearLayout>

<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_Validation_code"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginBottom="@dimen/margin_large"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/text_size"
        android:layout_gravity="right"
        android:fontFamily="@font/jf_flat_bold"
        />
<TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginBottom="@dimen/margin_small"
        android:text="@string/enter_Validation_code_msg"
        android:fontFamily="@font/jf_flat_semi"
        android:gravity="center"
        android:textSize="@dimen/textsize3"
        android:textColor="@android:color/black"

/>
    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginRight="@dimen/margin_normal"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginBottom="@dimen/margin_normal"
            android:hint="@string/confirm_code"
            app:boxCornerRadiusBottomEnd="@dimen/margin_large"
            app:boxCornerRadiusBottomStart="@dimen/margin_large"
            app:boxCornerRadiusTopEnd="@dimen/margin_large"
            app:boxCornerRadiusTopStart="@dimen/margin_large"
            android:fontFamily="@font/jf_flat_semi"


    >
        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etConfirmCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jf_flat_semi"
                android:drawablePadding="@dimen/padding_med"
                android:textSize="@dimen/textsize2"
                android:inputType="number"
                android:gravity="right"
        />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_large"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_large"
            android:text="@string/ver_code_receive"
            android:fontFamily="@font/jf_flat_semi"
            android:gravity="center"
            android:textSize="@dimen/textsize3"
            android:textColor="@color/colorPrimaryDark"
    />

    <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_large"
            android:layout_marginLeft="@dimen/margin_large"
            android:text="@string/resend_code"
            android:fontFamily="@font/jf_flat_semi"
            android:layout_marginBottom="@dimen/margin_normal"
            android:gravity="center"
            android:padding="@dimen/padding_med"
            android:layout_gravity="center"
            android:textSize="@dimen/textsize3"
            android:onClick="onResendCode"
            android:textColor="@color/colorAccent"
    />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_normal"
            android:orientation="vertical"
            android:gravity="center_horizontal"
    >
        <com.google.android.material.button.MaterialButton
                android:id="@+id/confirm_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="@string/confirm"
                android:onClick="onConfirmCode"
                app:cornerRadius="@dimen/margin_large"
                android:fontFamily="@font/jf_flat_bold"
                android:layout_marginTop="@dimen/margin_normal"
                android:layout_marginRight="@dimen/margin_large"
                android:layout_marginLeft="@dimen/margin_large"
        />


    </LinearLayout>
</LinearLayout>